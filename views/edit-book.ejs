<%- include('partials/header') %>

<div
  class="container my-5 main-text"
  style="min-height: 100vh; padding-top: 150px"
>
  <div class="text-center mb-4 edit-form">
    <h1 class="fw-bold">Edit Book</h1>
    <p class="text-muted fs-5 supporting-text">
      Modify the details below to update the book.
    </p>
  </div>

  <form
    action="/books/<%= book.id %>?_method=PUT"
    method="POST"
    class="mx-auto"
    style="max-width: 600px"
  >
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control"
        value="<%= book.title %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="author" class="form-label">Author:</label>
      <input
        type="text"
        id="author"
        name="author"
        class="form-control"
        value="<%= book.author %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="isbn" class="form-label">ISBN:</label>
      <input
        type="text"
        id="isbn"
        name="isbn"
        class="form-control"
        value="<%= book.isbn %>"
      />
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label">Rating (0-10):</label>
      <input
        type="number"
        id="rating"
        name="rating"
        class="form-control"
        value="<%= book.rating %>"
        min="0"
        max="10"
      />
    </div>

    <div class="mb-3">
      <label for="notes" class="form-label">Notes:</label>
      <textarea id="notes" name="notes" class="form-control" rows="4">
<%= book.notes %></textarea
      >
    </div>

    <div class="mb-3">
      <label for="date_read" class="form-label">Date Read:</label>
      <input
        type="date"
        id="date_read"
        name="date_read"
        class="form-control"
        value="<%= book.date_read ? new Date(book.date_read).toISOString().split('T')[0] : '' %>"
      />
    </div>

    <div class="text-center mt-4">
      <button type="submit" class="btn btn-primary btn-lg">Update Book</button>
      <a href="/books/:id" class="btn btn-secondary btn-lg ms-2">Cancel</a>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
